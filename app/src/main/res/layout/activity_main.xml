<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    tools:context=".Activities.MainActivity"
    android:padding="16dp">


    <TextView
        android:id="@+id/ruleInputLabel"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/enter_rule"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/ruleInput"
        android:layout_width="320dp"
        android:layout_gravity="center"
        android:layout_height="50dp"
        android:textSize="13dp"
        android:hint="e.g.,(age > 30 AND department = 'Sales')"
        android:layout_below="@id/ruleInputLabel"
        android:layout_marginTop="10dp"
        android:inputType="textMultiLine"
        android:minLines="2"
        android:gravity="center"
        android:background="@drawable/edit_background"/>


    <EditText
        android:id="@+id/dataInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="Enter User Data (key:value)" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">



        <com.google.android.material.button.MaterialButton
            android:id="@+id/createRuleButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Create Rule"
            android:textSize="12sp"
            app:cornerRadius="10dp"
            android:backgroundTint="@color/teal"
            android:layout_below="@id/ruleInput"
            android:layout_marginTop="16dp"
            android:layout_alignParentStart="true"/>

        <Button
            android:id="@+id/combineRulesButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Combine Rules"
            app:cornerRadius="10dp"
            android:textSize="12dp"
            android:backgroundTint="@color/teal"
            android:layout_below="@id/ruleInput"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/createRuleButton"
            android:layout_marginStart="16dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_height="wrap_content">



        <Button
            android:id="@+id/evaluateButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Evaluate Rule"
            android:gravity="center"
            android:textSize="12dp"
            app:cornerRadius="10dp"
            android:backgroundTint="@color/teal"
            android:layout_below="@id/ruleInput"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/combineRulesButton"
            android:layout_marginStart="16dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/resultLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result:"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_below="@id/createRuleButton"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:layout_below="@id/resultLabel"
        android:layout_marginTop="8dp"/>


</LinearLayout>
